import math
import webgl
import dom

class MyGL extends GLNode{

	mesh = webgl.vec3Rect(-1,-1,2,2)

	vertex: mesh[]

	slide: 0.5

	touchdown(v){
		start = slide
		capture do(v){
			slide = start + v.x
		}
	}

	pixel: mix(#447, #black) do
			step(slide) do
			(sin on .025 * gl_FragCoord.x + 3. * sin on 0.01 * gl_FragCoord.y) 
			* (cos on 0.025 * gl_FragCoord.y)

	draw: (){
		clearAll(#aero)
		draw(this)
	}
}

// build the simplest of scenegraphcs
GLView{
	init(document.body)
	MyGL{
		
	}
}
